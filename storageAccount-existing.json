{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "metadata": { "description": "Location" }
        },
        "storageAccountResourceGroup": {
            "type": "string",
            "metadata": {
                "Description": "Storage account resource group for cases when existing storage account is used"
            }
        },
        "storageAccount": {
            "type": "string",
            "metadata": {
                "Description": "The name of the new storage account to store the virtual machine disks"
            }
        },
        "storageAccountType": {
            "type": "string",
            "metadata": { "description": "Storage account type" }
        }
    },
    "resources": [
    ],
    "outputs": {
        "storageAccountId": {
            "value": "[resourceId(parameters('storageAccountResourceGroup'),'Microsoft.Storage/StorageAccounts',parameters('storageAccount'))]",
            "type": "string"
        }
    }
}
